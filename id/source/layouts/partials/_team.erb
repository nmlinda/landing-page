<div class="w3-container" style="padding:128px 16px" id="team">
  <h3 class="w3-center"><%= data.content.team.title %></h3>
  <p class="w3-center w3-large"><%= data.content.team.desc %></p>
  <div class="w3-row-padding w3-grayscale" style="margin-top:64px">
    <% data.content.team.item.each do |item| %>
    <div class="w3-col l3 m6 w3-margin-bottom">
      <div class="w3-card">
        <img src="/w3images/<%= item.img %>.jpg" alt="<%= item.name %>" style="width:100%">
        <div class="w3-container">
          <h3><%= item.name %></h3>
          <p class="w3-opacity"><%= item.position %></p>
          <p><%= item.desc %></p>
          <p><button class="w3-button w3-light-grey w3-block"><i class="fa fa-envelope"></i> Contact</button></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>